<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>


<?import javafx.scene.image.Image?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.pjatk.projekt.GameViewController">
   <children>
      <Pane prefHeight="200.0" prefWidth="200.0">
         <children>
            <ImageView fitHeight="400.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true" >
             <image>
                 <Image url="@images/background.png" />
             </image>
            </ImageView>
            <Button fx:id="difficultyButton" onAction="#difficultyButtonClicked" layoutX="211.0" layoutY="155.0" mnemonicParsing="false" prefHeight="45.0" prefWidth="179.0" text="Select difficulty level">
               <font>
                  <Font name="Balthazar Regular" size="20.0" />
               </font>
            </Button>
            <Button fx:id="scoreButton"  onAction="#scoreButtonClicked" layoutX="211.0" layoutY="214.0" mnemonicParsing="false" prefHeight="45.0" prefWidth="179.0" text="Score">
               <font>
                  <Font name="Balthazar Regular" size="22.0" />
               </font>
            </Button>
            <Button fx:id="qutButton"  onAction="#quitButtonClicked" layoutX="211.0" layoutY="274.0" mnemonicParsing="false" prefHeight="45.0" prefWidth="179.0" text="Quit">
               <font>
                  <Font name="Balthazar Regular" size="24.0" />
               </font>
            </Button>
         </children>
      </Pane>
      <Label layoutX="169.0" layoutY="28.0" prefHeight="106.0" prefWidth="262.0" text="Memory">
         <font>
            <Font name="Balthazar Regular" size="83.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
